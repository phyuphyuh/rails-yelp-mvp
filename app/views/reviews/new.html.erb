<div class="container">
  <h1>New Review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="star-rating">
      <% 5.times do |i| %>
        <input type="radio" name="review[rating]" value="<%= i + 1 %>" <%= "checked" if i == 2 %> />
      <% end %>
    </div>
    <%= f.input :content %>
    <%= f.submit %>
  <% end %>

  <%= link_to "Back to restaurant", restaurant_path(@restaurant) %>
</div>
